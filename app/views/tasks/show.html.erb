<div class="task-header">
  <h1><%= @task.title %></h1>
  <div id="edit-button">
    <i class="fas fa-edit"></i>
    <%= link_to "Edit this task", edit_task_path(@task)%>
  </div>
</div>
<p><%=@task.details%></p>
<%= link_to "Mark as complete!", complete_path(@task),
method: :post,
class: "btn btn-primary" %>
<%= link_to "Return to list", tasks_path %>
